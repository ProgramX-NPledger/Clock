<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Clock.Maui"
             x:Class="Clock.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <Style TargetType="Entry"> <!-- implicit style (also, consider inheritance and BasedOn https://learn.microsoft.com/en-us/training/modules/use-shared-resources/6-create-consistent-ui-by-using-styles -->
                <Setter Property="TextColor" Value="White" />
            </Style>
            <Style x:Key="TimerStyle" TargetType="Entry">
                <Setter Property="TextColor" Value="Red" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
